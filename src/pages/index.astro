---
// src/pages/index.astro

import Layout from '../layouts/Layout.astro';
// No need to import AnnouncementBanner here anymore

---
<Layout title="Home">
  {/* The banner is now in Layout.astro, so it will appear automatically */}

  <!-- Hero Section -->
  <section class="bg-white dark:bg-gray-800">
    <div class="container mx-auto px-6 py-24 text-center">
      <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-4">
        Build <span class="text-primary">Faster</span>, Grow <span class="text-primary">Smarter</span>
      </h1>
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-8">
        Velofy is your expert partner for crafting powerful Telegram Mini Apps and automation bots that engage users and drive business growth.
      </p>
      <a href="/request" class="btn">Start Your Project</a>
    </div>
  </section>
  <!-- Features Grid -->
  <section class="py-20">
    <div class="container mx-auto px-6">
      <div class="grid md:grid-cols-3 gap-8 text-center">
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-2">Seamless Integration</h3>
          <p class="text-gray-600 dark:text-gray-300">Create web-like experiences directly inside the world's most secure messaging app.</p>
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-2">User Engagement</h3>
          <p class="text-gray-600 dark:text-gray-300">Leverage bots and mini apps to build interactive communities and loyal customer bases.</p>
        </div>
        <div class="p-6">
          <h3 class="text-2xl font-bold mb-2">E-commerce Power</h3>
          <p class="text-gray-600 dark:text-gray-300">From simple product catalogs to full-fledged payment systems, sell directly on Telegram.</p>
        </div>
      </div>
    </div>
  </section>
</Layout>