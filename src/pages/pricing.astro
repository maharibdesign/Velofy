---
import Layout from '../layouts/Layout.astro';
import PricingTier from '../components/PricingTier.astro';
import { supabase } from '../lib/supabase';

let tiers = [];
try {
    const { data, error } = await supabase
        .from('tiers')
        .select('*')
        .order('sort_order', { ascending: true });

    if (error) throw error;
    tiers = data || [];
} catch (e) {
    console.error("Failed to fetch pricing tiers:", (e as Error).message);
}
---

<Layout title="Pricing">
  <div class="container mx-auto px-6 py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold">Flexible Pricing for Every Need</h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mt-2">Choose the plan that's right for you. All plans are customizable.</p>
    </div>

    {tiers.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-5xl mx-auto items-start">
            {tiers.map(tier => (
                <PricingTier
                    name={tier.name}
                    price={tier.price}
                    features={tier.features || []}
                    isPopular={tier.is_popular}
                />
            ))}
        </div>
    ) : (
        <div class="text-center py-12 card">
            <p class="text-xl">Pricing information is being updated.</p>
            <p class="text-gray-500 mt-2">Please contact us for a quote or add tiers in the admin panel.</p>
        </div>
    )}
  </div>
</Layout>