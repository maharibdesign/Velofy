---
interface Props {
  name: 'telegram' | 'instagram' | 'tiktok';
  href: string;
}

const { name, href } = Astro.props;

// I've sourced clean, standard SVG code for each icon.
// This is the most reliable way to ensure they render perfectly.
const icons = {
  telegram: `
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
      <path d="M9.78 18.65l.28-4.23 7.68-6.92c.34-.31-.07-.46-.52-.19L7.74 13.3 3.64 12c-.88-.25-.89-.86.2-1.3l15.97-6.16c.73-.33 1.43.18 1.15 1.3l-2.72 12.57c-.28 1.13-1.04 1.4-1.74.88L14.4 16.1l-4.1 3.95c-.47.44-1.25.21-1.52-.3z"/>
    </svg>
  `,
  instagram: `
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
      <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
      <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
    </svg>
  `,
  tiktok: `
    <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
      <path d="M16.6 5.82a2.49 2.49 0 1 1-2.49-2.49V12.5a2.5 2.5 0 1 1-5 0V5.21a7.49 7.49 0 1 0 7.49 7.49"/>
    </svg>
  `,
};
---

<a 
  href={href} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="text-gray-700 dark:text-gray-300 transition-colors duration-200 hover:text-primary dark:hover:text-primary"
  set:html={icons[name]}
>
</a>