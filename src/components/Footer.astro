---
import EmailCapture from './EmailCapture.astro';
import SocialIcon from './SocialIcon.astro';

// --- THIS IS THE ONLY CHANGE ---
// We've removed Instagram and TikTok from this array.
const socials = [
    { name: 'telegram', href: 'https://t.me/velofyminiapps' },
];
// -----------------------------

---
<footer class="bg-gray-100 dark:bg-gray-800 border-t border-gray-200 dark:border-gray-700">
    <div class="container mx-auto px-6 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div class="md:col-span-1">
                <a href="/" class="flex items-center space-x-2 mb-4">
                    <img src="/logo-light.svg" alt="Velofy Logo" class="h-8 w-auto block dark:hidden">
                    <img src="/logo-dark.svg" alt="Velofy Logo" class="h-8 w-auto hidden dark:block">
                </a>
                <p class="text-gray-500 dark:text-gray-400">Your partner for next-gen Telegram applications.</p>
                
                <div class="flex space-x-4 mt-6">
                    {socials.map(social => (
                        <SocialIcon name={social.name} href={social.href} />
                    ))}
                </div>
            </div>
            <div class="md:col-span-1">
                 <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
                 <ul class="space-y-2 text-gray-600 dark:text-gray-300">
                     <li><a href="/work" class="hover:text-primary">Work</a></li>
                     <li><a href="/pricing" class="hover:text-primary">Pricing</a></li>
                     <li><a href="/request" class="hover:text-primary">Request a Quote</a></li>
                 </ul>
            </div>
            <div class="md:col-span-2">
                <h3 class="text-lg font-semibold mb-4">Stay Updated</h3>
                <p class="text-gray-500 dark:text-gray-400 mb-4">Get insights on Telegram Mini Apps and bot development.</p>
                <EmailCapture />
            </div>
        </div>
        <div class="mt-12 pt-8 border-t border-gray-200 dark:border-gray-700 text-center text-gray-500 dark:text-gray-400">
            <p>Â© {new Date().getFullYear()} Velofy. All rights reserved.</p>
        </div>
    </div>
</footer>